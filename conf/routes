# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                                   controllers.Application.index

# Employee related routes
GET     /emp/list                           controllers.AccountController.list

POST    /emp/create                        controllers.AccountController.create

GET     /emp/edit                           controllers.AccountController.edit(empId: Int)

POST    /emp/update                        controllers.AccountController.update

GET     /emp/delete                         controllers.AccountController.delete(empId: Int)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file                       controllers.Assets.versioned(path="/public", file: Asset)
